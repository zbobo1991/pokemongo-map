<!DOCTYPE html><html> <head> <meta name="viewport" content="initial-scale=1.0, user-scalable=no"> <meta charset="utf-8"> <title>Pokemon GO Map</title> <style> html, body { height: 100%; margin: 0; padding: 0; } #map { height: 100%; } </style> </head> <body> <div id="map"></div> <script> function initMap() { var map = new google.maps.Map(document.getElementById('map'), { zoom: 16, center: {lat: LOCATION_LAT, lng: LOCATION_LNG} }); var pokemons = ALL_POKEMONS_DATA; pokemons.forEach(function(pokemon, index){ var marker = new google.maps.Marker({ position: {lat: pokemon.location.lat, lng: pokemon.location.lng}, map: map, icon: pokemon.properties.avatar }); var infowindow = new google.maps.InfoWindow(); google.maps.event.addListener(marker, 'mouseout', function() { infowindow.close(map, this); }); google.maps.event.addListener(marker, 'mouseover', function() { var content = "Name: <strong>"+pokemon.name+"</strong><br>Location: <br>"+pokemon.location.lat+","+pokemon.location.lng+"<br>"; content += "classification: "+pokemon.classification+"<br>"; content += "Weight: "+pokemon.properties.weight+"<br>"; content += "Height: "+pokemon.properties.height+"<br>"; content += "Time left: <strong style='color:red;'>"+pokemon.timeleft+"</strong><br>"; infowindow.setContent(content.toString()); infowindow.open(map, marker); }); }); } </script> <script async defer src="https://maps.googleapis.com/maps/api/js?key=GOOGLE_MAPS_API_KEY&callback=initMap"> </script> </body></html>
